// This is a tsconfig.json intended to be used by packages in this monorepo. It is designed to be
// extended from in addition to the appropriate environment tsconfig (e.g. Node, browser, etc.).
{
  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",

    // Performance optimization; see: https://www.npmjs.com/package/tslib
    "importHelpers": true,
  },

  // We need to exclude certain directories in order to prevent spurious errors from appearing in
  // the VSCode "Problems" pane.
  "exclude": ["dist", "node_modules", "tmp"],
}
